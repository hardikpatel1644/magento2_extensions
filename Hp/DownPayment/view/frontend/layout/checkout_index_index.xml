<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="downpayment" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Hp_DownPayment/js/view/checkout/cart/totals/downpayment</item>
                                                            <item name="sortOrder" xsi:type="string">5000</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Hp_DownPayment/checkout/cart/totals/downpayment</item>
                                                                <item name="title" xsi:type="string" translate="true">* Approx Down Payment</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>