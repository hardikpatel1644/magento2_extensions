<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="children" xsi:type="array">                                
                                    <item name="grand-total" xsi:type="array">
                                        <item name="config" xsi:type="array">                                       
                                            <item name="title" xsi:type="string" translate="true">Buy Now Price</item>
                                        </item>
                                    </item>
                                </item>
                                <item name="weeklypayment" xsi:type="array">
                                    <item name="component"  xsi:type="string">Hp_WeeklyPayment/js/view/checkout/cart/totals/weeklypayment</item>
                                    <item name="sortOrder" xsi:type="string">20</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Hp_WeeklyPayment/checkout/cart/totals/weeklypayment</item>
                                        <item name="title" xsi:type="string" translate="true">* Approx Weekly Payment</item>
                                    </item>
                                </item>
 
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>